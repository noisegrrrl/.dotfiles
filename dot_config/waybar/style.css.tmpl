/* vim: set filetype=css : */
* {
    border: none;
    border-radius: 0px;
    font-family: Maple Mono NFPropo, Maple Mono NF;
    font-size: large;
}

window#waybar {
    background: rgba(18, 18, 18, 0.5);
    color: rgba(180, 180, 180, 1);
}

tooltip {
    background: rgba(18, 18, 18, 1);
    border: 1px solid rgba(196, 105, 61, 1);
    border-radius: 10px;
}

tooltip label {
    color: rgba(180, 180, 180, 1);
}

#pulseaudio, 
#cpu, 
#memory, 
#temperature, 
#tray, 
#bluetooth, 
#clock, 
#power-profiles-daemon, 
#idle_inhibitor,
#battery,
#backlight,
#network {
    background-color: #121212;
    {{ if eq .chezmoi.hostname "stone-ocean" }} 
    padding: 5px 10px;
    {{ else if eq .chezmoi.hostname "x-ex01-calibarn" }}
    padding: 0px 5px;
    {{ end }}
}

